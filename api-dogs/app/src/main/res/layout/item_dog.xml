<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:padding="8dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="200dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/dog_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dog_background" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Bulldog"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dog_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Energy"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/max_life_expectancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Max Life Expectancy"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/dog_good_with_children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Good with children"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>